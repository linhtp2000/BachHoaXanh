                    $('#err_login').html('<div class="alert alert-danger">Password chưa nhập</div>');
                    $("#password").focus();
                    return false;
                }
                else {
                    var form_data_login = {
                        SDT: $("#SDT").val(),
                        password: $("#password").val()
                    };
                    $.ajax({
                        url: '/Login/SignIn',
                        type: 'POST',
                        async: true,
                        data: form_data_login,
                        success: function (msg_login) {
