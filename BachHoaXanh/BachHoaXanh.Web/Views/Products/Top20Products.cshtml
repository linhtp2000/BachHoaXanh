@*@model IEnumerable <(string Id, string Name, string Price, string Amount, string Image)>*@
@model IEnumerable<BachHoaXanh.Data.ModelView.Top20Products>
@{
    ViewBag.Title = "Top20Products";
    Layout = null;
}
<table class="table">
    <tr>

        <th>
            Số thứ tự
            @*@Html.DisplayNameFor(model => model.Name)*@
        </th>
        <th>
            Tên sản phẩm
            @*@Html.DisplayNameFor(model => model.ManagerId)*@
        </th>
        <th>
            Đơn giá
            @*@Html.DisplayNameFor(model => model.AdminId)*@
        </th>
        <th>
            Tổng số lượng đã bán
            @*@Html.DisplayNameFor(model => model.Salary)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.No) @*HIỆN SỐ THỨ TỰ*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>

            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>