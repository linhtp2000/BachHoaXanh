@model IEnumerable<BachHoaXanh.Data.ModelView.Top20Customers>
@{
    ViewBag.Title = "Top20Customer";
   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4>Danh sách 20 khách hàng thân thiết của cửa hàng:</h4>
<br />
<table class="table">
    <tr>

        <th>
            Thứ tự
            @*@Html.DisplayNameFor(model => model.Name)*@
        </th>
        <th>
            Tên khách hàng
            @*@Html.DisplayNameFor(model => model.ManagerId)*@
        </th>
        <!--<th>
            Price-->
        @*@Html.DisplayNameFor(model => model.AdminId)*@
        <!--</th>-->
        <th>
            Tổng tiền đã mua
            @*@Html.DisplayNameFor(model => model.Salary)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.No) @*HIỆN SỐ THỨ TỰ*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>

            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                @*<a href="/Customer/Details?id=@item.Id">Details</a>*@
                @Html.ActionLink("Details", "Details", "Customer", new { id = item.Id }, "")
                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>
